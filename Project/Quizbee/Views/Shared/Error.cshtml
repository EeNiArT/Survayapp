@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-12">

				<div class="wrapper-page">

					<div class="m-t-40 card-box">
						<div class="text-center">
							<h1 class="text-uppercase font-bold m-b-0">500</h1>
						</div>
						<div class="account-content">
							<div class="text-center m-b-20">
								<h2 class="expired-title mb-4 mt-2">Internal Server Error</h2>
								<p class="text-muted m-t-20 line-h-24 text-justify">
									We seem to have a problem loading this page. Please try refreshing (F5) your web browser or try again later. 										Note : Internal Server Errors are not often caused by caching issues, but on some occasions, the error go away after clearing the cache. It's such an easy and harmless thing to try, so don't skip it.
								</p>
							</div>
							<div class="row m-t-30">
								<div class="col-12">
									<a href="/" class="btn btn-lg btn-primary btn-block">Back to Home</a>
								</div>
							</div>
							<div class="clearfix"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>